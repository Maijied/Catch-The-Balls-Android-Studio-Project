<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.majhiwala.maijied.catchthebird.result"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/go1"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="325dp"
        android:layout_height="69dp"
        android:background="@drawable/go"
        android:fontFamily="casual"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/scoreLevel"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="monospace"
        android:text="150"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="70sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/highScoreLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="serif-monospace"
        android:text="HIGH SCORE : 300"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible" />
    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/try_again"
        android:onClick="tryAgain"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"

        android:background="@drawable/main_menu"
        android:onClick="mainMenu" />

</LinearLayout>
